{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
    "testMatch": [
        "**/__tests__/**/*.ts",
        "**/?(*.)+(spec|test|integration.test).ts"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/",
        "setup.ts",
        "testUtils.ts"
    ],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    }
} 