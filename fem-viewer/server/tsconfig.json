{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"types": ["node"],
		"typeRoots": ["src/@types", "./node_modules/@types"],
		"paths": {
			"*": ["node_modules/*", "src/@types/*"]
		}
	},
	"include": ["src/**/*", "server.ts", "../src/parser/index.ts"],
	"exclude": ["node_modules", "build"],
	"files": ["src/@types/index.d.ts"]
}
