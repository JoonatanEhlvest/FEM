{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES6",
		"jsx": "react",
		// "noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",

		"types": [
			"jest",
			"node"
		],
		"typeRoots": ["./@types", "./node_modules/@types"]
	},
	"files": ["@types/index.d.ts"],
	"include": [
		"src",
		"server.ts",
		"types",
		"**/*.test.ts"
	],
	"exclude": ["node_modules", "build", "../src"]
}
